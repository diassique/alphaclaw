# ─── Wallet ───────────────────────────────────────────────────────────────────
# The address that RECEIVES USDC payments from clients (all services)
WALLET_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# Private key of the AlphaClaw coordinator agent — used to PAY sub-services via x402.
# Needs USDC on Base Sepolia. Leave empty to run in demo mode (no real payments).
AGENT_PRIVATE_KEY=0xYOUR_AGENT_PRIVATE_KEY_HERE

# ─── x402 ─────────────────────────────────────────────────────────────────────
FACILITATOR_URL=https://x402.org/facilitator
NETWORK=base-sepolia

# ─── Ports ────────────────────────────────────────────────────────────────────
PORT_SENTIMENT=4001
PORT_SENTIMENT2=4006
PORT_POLYMARKET=4002
PORT_DEFI=4003
PORT_NEWS=4004
PORT_WHALE=4005
PORT_AGENT=5000

# ─── Service config ──────────────────────────────────────────────────────────
# CryptoPanic API token (free registration at https://cryptopanic.com/developers/api/)
# Required for the news service to return real data
CRYPTOPANIC_TOKEN=

# Base Sepolia RPC URL for wallet + whale agent (optional)
BASE_RPC_URL=https://sepolia.base.org

# Base Mainnet RPC for settlement price verification
BASE_MAINNET_RPC_URL=https://mainnet.base.org

# Comma-separated allowed CORS origins (default: * for all)
CORS_ORIGINS=*

# ─── Claude AI ────────────────────────────────────────────────────────────────
# Anthropic API key for AI-powered alpha narratives (optional)
ANTHROPIC_API_KEY=
# Claude model for narrative generation (default: claude-sonnet-4-6)
CLAUDE_MODEL=claude-sonnet-4-6

# ─── Telegram Bot ─────────────────────────────────────────────────────────────
# Bot token from @BotFather (optional — enables Telegram alerts + /hunt commands)
TELEGRAM_BOT_TOKEN=
# Chat ID to receive alerts
TELEGRAM_CHAT_ID=
# Minimum confidence % to trigger Telegram alert (default: 50)
TELEGRAM_ALERT_THRESHOLD=50

# ─── Autopilot ────────────────────────────────────────────────────────────────
# Base interval between automated hunts (default: 5 min)
AUTOPILOT_INTERVAL_MS=300000
# Minimum interval — prevents runaway speed-up (default: 5 min)
AUTOPILOT_MIN_INTERVAL_MS=300000
# Maximum interval when signals are strong (default: 15 min)
AUTOPILOT_MAX_INTERVAL_MS=900000
# Comma-separated topics for autopilot rotation
AUTOPILOT_TOPICS=bitcoin,ethereum,solana,DeFi alpha,crypto market

# ─── Moltbook (OpenClaw) ────────────────────────────────────────────────────
# API key for posting to Moltbook (get from https://moltbook.com)
MOLTBOOK_API_KEY=
# Submolt to post hunt results to (default: lablab)
MOLTBOOK_SUBMOLT=lablab
# Auto-post hunt results to Moltbook (default: false)
MOLTBOOK_AUTO_POST=false
# Minimum confidence % to auto-post (default: 40)
MOLTBOOK_MIN_CONFIDENCE=40

# ─── Cloudflare Tunnel ────────────────────────────────────────────────────────
# Token for exposing the coordinator via Cloudflare tunnel (optional)
CLOUDFLARE_TUNNEL_TOKEN=
